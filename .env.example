# ===========================================
# HomeLedger Environment Variables
# Copy this file to .env and fill in your values
# ===========================================

# ---- Database ----
DATABASE_URL="postgresql://user:password@localhost:5432/homeledger"

# ---- Auth (NextAuth.js) ----
NEXTAUTH_SECRET="generate-a-random-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# ---- AI (at least one required) ----
GEMINI_API_KEY=""
ABACUSAI_API_KEY=""

# ---- Open Banking (TrueLayer) ----
TRUELAYER_CLIENT_ID=""
TRUELAYER_CLIENT_SECRET=""
TRUELAYER_REDIRECT_URI="http://localhost:3000/api/open-banking/callback"
TRUELAYER_SANDBOX=true

# ---- Companies House ----
CH_API_KEY=""
CH_OAUTH_CLIENT_ID=""
CH_OAUTH_CLIENT_SECRET=""

# ---- HMRC ----
HMRC_CLIENT_ID=""
HMRC_CLIENT_SECRET=""
HMRC_API_BASE="https://test-api.service.hmrc.gov.uk"
HMRC_USE_SANDBOX=true

# ---- AWS S3 (document storage) ----
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="eu-west-2"

# ---- Email (SMTP) ----
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@homeledger.co.uk"

# ---- Stripe (payments — optional) ----
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# ---- Yoti IDV (identity verification — optional) ----
YOTI_CLIENT_SDK_ID=""
YOTI_PEM_KEY_PATH=""
YOTI_SANDBOX=true
YOTI_WEBHOOK_SECRET=""

# ---- Docling (document processing — optional) ----
DOCLING_URL="http://localhost:3200"

# ---- Vault Encryption ----
VAULT_ENCRYPTION_KEY="generate-a-32-byte-hex-key"
